{
    "manifest_version": 2,
    "name": "Reminder",
    "version": "0.1",
    "description": "Always Alert!",
    "permissions": ["storage", "notifications", "alarms", "https://code.jquery.com/jquery-3.3.1.slim.min.js", "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"],
    "options_page": "pages/options.html",
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["js/content.js"]
    }],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' https://code.jquery.com https://stackpath.bootstrapcdn.com; object-src 'self'",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Reminder",
        "default_icon": {
            "16": "images/alert16.png",
            "32": "images/alert32.png",
            "48": "images/alert48.png",
            "64": "images/alert64.png",
            "128": "images/alert128.png",
            "256": "images/alert256.png",
            "512": "images/alert512.png"
        }
    },
    "icons": {
        "16": "images/alert16.png",
        "32": "images/alert32.png",
        "48": "images/alert48.png",
        "64": "images/alert64.png",
        "128": "images/alert128.png",
        "256": "images/alert256.png",
        "512": "images/alert512.png"
    }
}